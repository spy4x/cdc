{
  "tabWidth": 2,
  "singleQuote": true,
  "semi": true,
  "trailingComma": "all",
  "printWidth": 120,
  "plugins": ["prettier-plugin-svelte", "prettier-plugin-sql"],
  "arrowParens": "avoid",
  "bracketSpacing": true,
  "overrides": [
    {
      "files": "*.svelte",
      "options": {
        "parser": "svelte"
      }
    },
    {
      "files": ["*.sql"],
      "options": {
        "parser": "sql",
        "language": "postgresql",
        "keywordCase": "upper"
      }
    }
  ]
}
